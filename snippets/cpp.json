{
    "registerMacro": {
        "prefix": "registerMacro",
        "body": [
            "#include \"rclcpp_components/register_node_macro.hpp\"",
            "RCLCPP_COMPONENTS_REGISTER_NODE(${1:/*class_name*/});\n$0"
        ]
    },
    "rclcpp::init": {
		"scope": "cpp",
		"prefix": "init_rclcpp",
		"body": "rclcpp::init(argc, argv, \"${1:/*node_name*/}\");\nrclcpp::NodeHandle n;\n$0",
		"description": "rclcpp::init()"
	},
    "rclcpp::Publisher": {
		"scope": "cpp",
		"prefix": "publisher_rclcpp",
		"body": "rclcpp::Publisher ${1:/*pub_name*/}_pub = ${2:n}.advertise<${3:/*msg_type*/}>(\"${4:/*topic_name*/}\", ${5:1000});\n$0",
		"description": "rclcpp::Publisher"
	},
    "rclcpp::Subscriber": {
		"scope": "cpp",
		"prefix": "subscriber_rclcpp",
		"body": "rclcpp::Subscriber ${1:/*sub_name*/}_sub = ${2:n}.subscribe(\"${3:/*topic_name*/}\", ${4:1000}, ${5:/*subCallback*/}_callback);\n$0",
		"description": "rclcpp::Subscriber"
	}
}